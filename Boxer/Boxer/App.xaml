<Application x:Class="Boxer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Boxer"
             xmlns:views="clr-namespace:Boxer.View.Views"
             xmlns:vm="clr-namespace:Boxer.ViewModel">
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:MainMenuViewModel}">
            <views:MainMenuPage/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:LoginViewModel}">
            <views:LoginScreen/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:UserControl1ViewModel}">
            <views:UserControl1/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:UserControl2ViewModel}">
            <views:UserControl2/>
        </DataTemplate>
         
    </Application.Resources>
</Application>
