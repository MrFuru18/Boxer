<UserControl x:Class="Boxer.View.Views.WarehouseMenuPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Boxer.View.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal">
            <!--  Add Product To Location Button -->
            <Button x:Name="AddProductToLocation_button"
                    Background="Transparent"
                    Width="150"
                    Height="150"
                    Command="{Binding NavigateAddProductToLocationCommand}" CommandParameter="AddProductToLocation">
                <StackPanel>
                    <Image  Source="/View/Images/Icon1.png"
                            Stretch="None"/>
                    <TextBlock  x:Name="AddProductToLocationLocation_textblock"
                                Text="Przypisz Lokalizację"
                                HorizontalAlignment="Center"
                                FontSize="20"/>
                </StackPanel>
            </Button>

            <!--  Add Product To Pallet Button -->
            <Button x:Name="AddProductToPallet_button"
                    Background="Transparent"
                    Width="150"
                    Height="150"
                    Command="{Binding NavigateAddProductToPalletCommand}" CommandParameter="AddProductToPallet">
                <StackPanel>
                    <Image  Source="/View/Images/Icon1.png"
                            Stretch="None"/>
                    <TextBlock  x:Name="AddProductToPallet_textblock"
                                Text="Przypisz Do Palety"
                                HorizontalAlignment="Center"
                                FontSize="20"/>
                </StackPanel>
            </Button>

            <!--  Add Pallet Button -->
            <Button x:Name="AddPallet_button"
                    Background="Transparent"
                    Width="150"
                    Height="150"
                    Command="{Binding NavigateAddPalletCommand}" CommandParameter="AddPallet">
                <StackPanel>
                    <Image  Source="/View/Images/Icon1.png"
                            Stretch="None"/>
                    <TextBlock  x:Name="AddPallet_textblock"
                                Text="Dodaj Paletę"
                                HorizontalAlignment="Center"
                                FontSize="20"/>
                </StackPanel>
            </Button>
            
            <!--  Add Location Button -->
            <Button x:Name="AddLocation_button"
                    Background="Transparent"
                    Width="150"
                    Height="150"
                    Command="{Binding NavigateAddLocationCommand}" CommandParameter="AddLocation">
                <StackPanel>
                    <Image  Source="/View/Images/Icon1.png"
                            Stretch="None"/>
                    <TextBlock  x:Name="AddLocation_textblock"
                                Text="Dodaj Lokalizację"
                                HorizontalAlignment="Center"
                                FontSize="20"/>
                </StackPanel>
            </Button>

        </StackPanel>

    </Grid>

</UserControl>
