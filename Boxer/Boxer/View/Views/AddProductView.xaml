<UserControl x:Class="Boxer.View.Views.AddProductView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Boxer.View.Views"
             mc:Ignorable="d" >
    <Grid Background="White">
        <StackPanel Width="300" VerticalAlignment="Center">

            <!-- Cancel Button-->
            <Button x:Name="Cancel_button"
                    HorizontalAlignment="Right"
                    Background="Transparent"
                    Width="40"
                    Height="40"
                    Command="{Binding CancelCommand}" CommandParameter="Cancel">
                <StackPanel>
                    <Image Source="/View/Images/Icon1.png" 
                       Stretch="None"/>
                </StackPanel>
            </Button>

            <TextBlock Text="{Binding HeaderText}"
                       VerticalAlignment="Center"
                       FontSize="30"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,40"/>

            <!-- Customer Adress TextBox -->
            <TextBlock Text="Adres Klienta"
                       VerticalAlignment="Center"
                       FontSize="20"
                       Margin="0,0,0,5"/>

            <TextBox x:Name="CustomerAddress_textbox"
                     Padding="5"
                     FontSize="20"
                     Width="300"
                     VerticalAlignment="Center"
                     Text="{Binding CustomerAddress}"/>

            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <!-- Product TextBox -->
                    <TextBlock Text="Produkt"
                       VerticalAlignment="Center"
                       FontSize="20"
                       Margin="0,30,0,5"/>

                    <TextBox x:Name="Product_textbox"
                     Padding="5"
                     FontSize="20"
                     Width="200"
                     VerticalAlignment="Center"
                     Text="{Binding Product}"/>
                </StackPanel>
                <StackPanel>
                    <!-- Product_id TextBox -->
                    <TextBlock Text="Id"
                       VerticalAlignment="Center"
                       FontSize="20"
                       Margin="30,30,0,5"/>

                    <TextBox x:Name="product_id_textbox"
                     Padding="5"
                     FontSize="20"
                     Width="60"
                     Margin="30,0,0,0"
                     VerticalAlignment="Center"
                     Text="{Binding product_id}"/>
                </StackPanel>
            </StackPanel>

            <ListView Grid.Row="1" Grid.Column="0" Width="300" Height="80" Margin="0,20,0,0"  ItemsSource="{Binding employees}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="50" DisplayMemberBinding="{Binding id}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Content="id" CommandParameter="id"/>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                        <GridViewColumn Width="150" DisplayMemberBinding="{Binding name}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Content="Produkt" CommandParameter="name"/>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                        <GridViewColumn Width="100" DisplayMemberBinding="{Binding manufacturer}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Content="Producent" CommandParameter="quantity"/>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <!-- Quantity TextBox -->
                    <TextBlock Text="Ilość"
                       VerticalAlignment="Center"
                       FontSize="20"
                       Margin="0,20,0,5"/>

                    <TextBox x:Name="Quantity_textbox"
                     Padding="5"
                     FontSize="20"
                     Width="200"
                     VerticalAlignment="Center"
                     Text="{Binding Product}"/>
                </StackPanel>

                <Button Content="+"
                        VerticalAlignment="Bottom"
                        Padding="5"
                        FontSize="20"
                        Width="40"
                        Height="40"
                        Margin="30,0,0,0"/>
            </StackPanel>



            <ListView Grid.Row="1" Grid.Column="0" Width="300" Height="80" Margin="0,20,0,0"  ItemsSource="{Binding employees}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="50" DisplayMemberBinding="{Binding id}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Content="id" CommandParameter="id"/>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                        <GridViewColumn Width="200" DisplayMemberBinding="{Binding name}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Content="Produkt" CommandParameter="name"/>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                        <GridViewColumn Width="50" DisplayMemberBinding="{Binding quantity}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Content="Ilość" CommandParameter="quantity"/>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>


            <!-- Remarks TextBox -->
            <TextBlock Text="Uwagi"
                       VerticalAlignment="Center"
                       FontSize="20"
                       Margin="0,30,0,5"/>

            <TextBox x:Name="Surname_textbox"
                     Padding="5"
                     FontSize="20"
                     Height="100"
                     Width="300"
                     VerticalAlignment="Center"
                     Text="{Binding Remarks}"/>


            <!-- Add Button -->
            <Button HorizontalAlignment="Center"
                    Content="Potwerdź"
                    FontSize="20"
                    Margin="0,30,0,0"
                    Command="{Binding AddProduct}"/>

        </StackPanel>
    </Grid>
</UserControl>
