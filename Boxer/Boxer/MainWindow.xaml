<Window x:Class="Boxer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Boxer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="EmployeesButton" Padding="15" Margin="15" Click="EmployeesButton_Click">Load Data</Button>
            <Button x:Name="EmployeesButton1" Padding="15" Margin="15" Click="EmployeesButton1_Click">Add Data</Button>
        </StackPanel>

        <TextBlock Grid.Row="1" HorizontalAlignment="Center" x:Name="Name"/>
    </Grid>
</Window>
